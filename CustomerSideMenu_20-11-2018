public class Customer_headerCompCntrl {
    public contact con{get;set;}
    public Customer_headerCompCntrl(){
        con=new contact();
         string conid=apexpages.currentpage().getparameters().get('id');
        con=[select id,name from contact where id=:conid];
    }
}
